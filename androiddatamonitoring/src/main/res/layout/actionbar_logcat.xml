<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/actionTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="LogCat"/>

    <ImageView
        android:id="@+id/menuPlayIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_clickable_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@android:drawable/ic_media_pause"/>

    <ImageView
        android:id="@+id/menuFilterIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuPlayIcon"
        android:background="@drawable/background_clickable_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@android:drawable/ic_menu_search"/>

    <ImageView
        android:id="@+id/menuClearIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuFilterIcon"
        android:background="@drawable/background_clickable_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    <ImageView
        android:id="@+id/menuShareIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuClearIcon"
        android:background="@drawable/background_clickable_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@android:drawable/ic_menu_share"/>

    <ImageView
        android:id="@+id/menuSaveIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuShareIcon"
        android:background="@drawable/background_clickable_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@android:drawable/ic_menu_save"/>


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/even_grey"/>

</RelativeLayout>